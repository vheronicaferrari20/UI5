<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		title="">
		<content>
			<VBox
				class="sapUiResponsiveMargin"
				width="auto">
				
				<Label text ="Nombre de Idioma"/>
				<Input id="idiomaInput"/>

			</VBox>
		</content>

		<buttons>
            <Button
               id="acceptButton"	
		       type="Accept"
	           text="Aceptar"
	           press="onPressAccept"/>
             <Button
               id="rejectButton" 	
		       type="Reject" 
	           text="Cancelar"
	           press="onCloseDialog"/> 
        </buttons>
	</Dialog>
</core:FragmentDefinition>