<core:View 
    id="Employees"
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"
	controllerName="App.controller.employee.Employees"
	xmlns:l="sap.ui.layout.form" 
	xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:cc="App.control"
	height="100%">

    <ScrollContainer
        class ="centerAuto"
        horizontal="false"
        vertical="true"
        height="98%"
        width="98%">
 	 
        <ObjectHeader
            class="header-page"
            title="NÃ³mina de Empleados"
            titleLevel="H1"
            condensed="true"
            icon="sap-icon://group"
            backgroundDesign="Transparent"
            responsive="true">

            <headerContainer>
                
                <IconTabBar
                    id="iconTabBar"
                    select="handleIconTabBarSelect"
                    applyContentPadding="false"
                    expandable="false">
                    <items>
                        <IconTabFilter
                            key="oportunidades"
                            icon="sap-icon://list">

                            <mvc:XMLView viewName="App.view.employee.EmployeesActions"/>

                            <mvc:XMLView viewName="App.view.employee.EmployeesList"/>
                        
                        </IconTabFilter>

                        <IconTabFilter
                            key="analytics"
                            icon="sap-icon://bar-chart">

                            <mvc:XMLView viewName="App.view.employee.EmployeesActions"/>

                            <mvc:XMLView viewName="App.view.employee.EmployeesAnalytics"/>

                        </IconTabFilter>
                    </items>
                </IconTabBar>

            </headerContainer>

        </ObjectHeader>

    </ScrollContainer>

</core:View>
